{
  "$id": "https://abracadabra.dev/schema/vision-0.1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Abracadabra Vision Schema v0.1",
  "type": "object",
  "required": ["version", "intent", "scene"],
  "properties": {
    "version": {
      "type": "string",
      "const": "abra-0.1.0"
    },
    "intent": {
      "type": "string",
      "minLength": 1
    },
    "bind": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "enum": ["light_group", "audio", "screen", "haptics"]
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "src": { "type": "string" },
          "id": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "scene": {
      "type": "object",
      "required": ["flow"],
      "properties": {
        "flow": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["do"],
            "properties": {
              "after": {
                "type": "string",
                "pattern": "^[0-9]+(ms|s)$"
              },
              "do": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/$defs/action" }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "action": {
      "oneOf": [
        {
          "type": "object",
          "required": ["lighting"],
          "properties": {
            "lighting": {
              "type": "object",
              "required": ["ref", "preset"],
              "properties": {
                "ref": { "type": "string" },
                "preset": { "type": "string" }
              }
            }
          }
        },
        {
          "type": "object",
          "required": ["audio"],
          "properties": {
            "audio": {
              "type": "object",
              "required": ["ref"],
              "properties": {
                "ref": { "type": "string" },
                "src": { "type": "string" },
                "stop": { "type": "boolean" }
              }
            }
          }
        },
        {
          "type": "object",
          "required": ["screen"],
          "properties": {
            "screen": {
              "type": "object",
              "required": ["ref"],
              "properties": {
                "ref": { "type": "string" },
                "text": { "type": "string" }
              }
            }
          }
        },
        {
          "type": "object",
          "required": ["haptics"],
          "properties": {
            "haptics": {
              "type": "object",
              "required": ["ref", "pattern"],
              "properties": {
                "ref": { "type": "string" },
                "pattern": { "type": "string" }
              }
            }
          }
        }
      ]
    }
  }
}
