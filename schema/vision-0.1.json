{
  "$id": "https://abracadabra.dev/schema/vision-0.1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Abracadabra Vision Schema v0.1",
  "type": "object",
  "required": ["version", "intent", "scene"],
  "properties": {
    "version": { "type": "string", "const": "abra-0.1.0" },
    "intent":  { "type": "string", "minLength": 1 },
    "bind":    {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "enum": ["light_group","audio","screen"] },
          "tags": { "type": "array", "items": { "type": "string" } },
          "src":  { "type": "string" },
          "id":   { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "scene": {
      "type": "object",
      "required": ["flow"],
      "properties": {
        "flow": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              { "type": "object", "required": ["do"], "properties": {
                "do": { "type": "array", "items": { "$ref": "#/$defs/action" }, "minItems": 1 }
              }},
              { "type": "object", "required": ["after","do"], "properties": {
                "after": { "type": "string", "pattern": "^[0-9]+(ms|s)$" },
                "do": { "type": "array", "items": { "$ref": "#/$defs/action" }, "minItems": 1 }
              }}
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "guards": {
      "type": "object",
      "properties": {
        "allow":   { "type": "array", "items": { "type": "string" } },
        "dry_run": { "type": "boolean" },
        "fallback":{ "type": "string" },
        "audit":   { "type": "boolean" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "action": {
      "type": "object",
      "oneOf": [
        { "required": ["lighting"], "properties": {
          "lighting": {
            "type": "object",
            "required": ["ref","preset"],
            "properties": {
              "ref": { "type": "string" },
              "preset": { "type": "string" }
            },
            "additionalProperties": false
          }
        }},
        { "required": ["audio"], "properties": {
          "audio": {
            "type": "object",
            "properties": {
              "ref":  { "type": "string" },
              "play": { "type": "boolean" },
              "stop": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        }},
        { "required": ["screen"], "properties": {
          "screen": {
            "type": "object",
            "required": ["ref","show"],
            "properties": {
              "ref":  { "type": "string" },
              "show": { "type": "string" }
            },
            "additionalProperties": false
          }
        }}
      ]
    }
  }
}
